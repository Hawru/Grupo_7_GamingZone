<!doctype html>
<html lang="en">
  <%- include('../partials/head', {title: 'Gaming Zone - Register'}) %>
  <body>
    <%- include('../partials/header') %>
    <main id="bg-register" class="d-flex align-items-center p-4">
      <div class="container">
        <div class="row justify-content-center">
          <form method="POST" class="col-md-5 col-lg-4 rounded-3 p-4 shadow bg-dark" id="register-form" enctype="multipart/form-data">
            <h2 class="mt-0 mb-4 text-center">Registrate</h2>
            <% if (locals.errors) {
              errors.forEach(error => { %>
                <p class="feedback d-block"><%= error.msg %></p>
            <% })} %>
            <div class="input-group mb-3">
              <input type="text" class="form-control" name="username" placeholder="Nombre de usuario" value="<%= locals.old && old.username ? old.username : '' %>">
            </div>
            <div class="input-group mb-3">
              <input type="email" class="form-control" name="email" placeholder="Correo electrónico" value="<%= locals.old && old.email ? old.email : '' %>">
            </div>
            <div class="mb-3">               
              <label for="profile_image" class="form-label">Imagen de perfil</label>
              <input class="form-control" name="profile_image" type="file" id="formFile"></input>
            </div>
            <div class="mb-3">
              <input type="password" name="password" class="form-control rounded" placeholder="Contraseña">           
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-lg btn-primary" type="submit">Registrarme</button>
            </div>
            <p class="mt-3 mb-0 text-center">o registrate con tu cuenta de</p>
            <div class="container text-center redes-sociales py-3">
              <div class="row">
                <div class="col-3">
                  <a href="" class="rounded d-block bg-primary w-100"><i class="fa-brands fa-google"></i></a>
                </div>
                <div class="col-3">
                  <a href="" class="rounded d-block bg-primary w-100"><i class="fa-brands fa-facebook"></i></a>
                </div>
                <div class="col-3">
                  <a href="" class="rounded d-block bg-primary w-100"><i class="fa-brands fa-square-twitter"></i></a>
                </div>
                <div class="col-3">
                  <a href="" class="rounded d-block bg-primary w-100"><i class="fa-brands fa-twitch"></i></a>
                </div>
              </div>
            </div>
            <p class="text-center">¿Ya tienes una cuenta? <a href="login">Inicia sesión</a></p>
          </form>
        </div>    
      </div>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
  </body>
</html>
